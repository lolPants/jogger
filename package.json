{
  "name": "@lolpants/jogger",
  "version": "0.1.0",
  "description": "Simple JSON logger",
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib/**/*",
    "esm/**/*"
  ],
  "scripts": {
    "prepublishOnly": "yarn run test && yarn run build",
    "test": "yarn run check",
    "check": "yarn run compile --noEmit",
    "prebuild": "rimraf lib esm",
    "build:cjs": "ncc build ./src/index.ts -o lib -m",
    "build:esm": "yarn run compile --module ES6 --outDir esm",
    "build": "yarn run build:cjs && yarn run build:esm",
    "compile": "tsc",
    "watch": "yarn run compile --watch",
    "dev": "yarn run watch  --sourceMap"
  },
  "repository": "git@github.com:lolPants/jogger.git",
  "author": "Jack Baron <jackmbaron@gmail.com> (https://www.jackbaron.com)",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/node": "^14.14.21",
    "@zeit/ncc": "^0.22.3",
    "typescript": "^4.1.3"
  }
}
